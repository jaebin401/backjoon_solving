{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",  // ← .o 대신 ./build 디렉토리
                "--std=c++11"
            ],
            "options": {
                "cwd": "${workspaceFolder}"  // ← 작업 경로는 프로젝트 루트
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified to build into ./build/"
        }
    ],
    "version": "2.0.0"
}